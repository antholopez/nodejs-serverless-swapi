{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build",
    "sourceMap": true,
    "baseUrl": "./",
    "target": "es2017",
    "removeComments": true,
  },
  "exclude": ["node_modules"]
}